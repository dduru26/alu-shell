#!/usr/bin/env bash
#a script that prints "Best School" 10 times using a while loop. On the 9th iteration, it prints "Best School" followed by "Hi" on a new line
counter=1
while [ $counter -le 10 ]; do
    if [ $counter -eq 9 ]; then
        echo "Best School"
        echo "Hi"
    else
        echo "Best School"
    fi
    ((counter++))
done
